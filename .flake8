[flake8]
max-line-length = 100
extend-ignore = E203, E266, E501, W503, F403, F401
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .eggs,
    docs
max-complexity = 10
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F811
